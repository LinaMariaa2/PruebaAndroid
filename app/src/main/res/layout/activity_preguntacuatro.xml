<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Preguntacuatro">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pregunta4"
        android:layout_gravity="center"
        android:layout_marginTop="80sp"
        android:textSize="30sp"
        android:textColor="@color/azuloscuro"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:paddingTop="50dp">

        <ImageView
            android:id="@+id/imgcat"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/catimg" />
        <ImageView
            android:id="@+id/imgcow"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/cowimg"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:paddingTop="40dp">

        <ImageView
            android:id="@+id/imgtourtle"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/tourtleimg"
            android:layout_gravity="center"

            />
        <ImageView
            android:id="@+id/imgdogs"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/dogimg"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnpregunta4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/btnpregunta"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:textSize="20dp"
        android:backgroundTint="@color/rosita"

        />


</LinearLayout>